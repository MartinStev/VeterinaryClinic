@model PetTracking.DTOs.CreateVaccineDTO

@{
    ViewData["Title"] = "Create Vaccine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🩺 Create New Vaccine</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <!-- Vaccine Name Input -->
        <div class="form-group mb-4">
            <label asp-for="Name" class="form-label">Vaccine Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter vaccine name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center">
            <input type="submit" value="Create Vaccine" class="btn btn-primary btn-lg" />
        </div>
    </form>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a asp-action="GetAllVaccines" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to Vaccines
        </a>
    </div>
</div>

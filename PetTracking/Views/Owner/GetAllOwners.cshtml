@model IEnumerable<PetTracking.DTOs.GetOwnerDTO>

@{
    ViewData["Title"] = "GetAllOwners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">List of all Owners in the System</h1>

    <div class="table-responsive shadow-lg p-3 bg-white rounded">
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var owner in Model)
                {
                    <tr>
                        <td class="align-middle">@owner.Name</td>
                        <td class="align-middle">@owner.Surname</td>
                        <td class="align-middle">@owner.Age</td>
                        <td class="align-middle">

                            @if(User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@owner.OwnerId" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@owner.OwnerId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this owner?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                           
                            <a asp-action="Details" asp-route-id="@owner.OwnerId" class="btn btn-sm btn-outline-info me-2">
                                <i class="bi bi-eye"></i> Details
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

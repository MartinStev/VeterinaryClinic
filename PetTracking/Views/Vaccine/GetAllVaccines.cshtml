@model IEnumerable<PetTracking.DTOs.GetVaccineDTO>

@{
    ViewData["Title"] = "GetAllVaccines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">💉 All Vaccines</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Vaccine Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vaccine in Model)
                {
                    <tr>
                        <td>@vaccine.Name</td>
                        <td class="text-center">

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@vaccine.VaccineId" class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@vaccine.VaccineId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this vaccine?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }

                            <a asp-action="Details" asp-route-id="@vaccine.VaccineId" class="btn btn-success btn-sm me-2 text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

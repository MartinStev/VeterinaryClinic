@model PetTracking.DTOs.EditVaccineDTO

@{
    ViewData["Title"] = "Edit Vaccine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🩺 Edit Vaccine</h2>

    <form asp-action="Edit" method="post" class="shadow-lg p-4 rounded bg-light">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="VaccineId" /> 

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter vaccine name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Update Vaccine" class="btn btn-primary btn-lg" />
        </div>

    </form>

    <div class="mt-3 text-center">
        <a asp-action="GetAllVaccines" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Go Back to Vaccines
        </a>
    </div>
</div>
